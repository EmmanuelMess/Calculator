<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_calc_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="65dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <com.android2.calculator3.view.CalculatorEditText
                android:id="@+id/display"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="23sp"
                android:textColor="@color/display_formula_text_color"/>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/del"
                android:src="@drawable/floating_del"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/clear"
                android:visibility="gone"
                android:src="@drawable/floating_clr"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/panelswitch"
        android:layout_width="280dp"
        android:layout_height="280dp"/>

</LinearLayout>
