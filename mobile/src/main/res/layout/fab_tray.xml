<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pad_numeric_background_color"
    android:layout_gravity="bottom"
    android:visibility="invisible">

    <com.android2.calculator3.view.ImageButton
        android:id="@+id/btn_advanced"
        android:src="@drawable/tray_btn_advanced"
        android:background="@color/pad_button_ripple_color"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <com.android2.calculator3.view.ImageButton
        android:id="@+id/btn_trig"
        android:src="@drawable/tray_btn_trig"
        android:background="@color/pad_button_ripple_color"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <com.android2.calculator3.view.ImageButton
        android:id="@+id/btn_hex"
        android:src="@drawable/tray_btn_hex"
        android:background="@color/pad_button_ripple_color"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <com.android2.calculator3.view.ImageButton
        android:id="@+id/btn_matrix"
        android:src="@drawable/tray_btn_matrix"
        android:background="@color/pad_button_ripple_color"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

</LinearLayout>
